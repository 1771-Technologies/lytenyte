---
import { twMerge } from "tailwind-merge";
interface Props {
  readonly class?: string;
}

const props = Astro.props;
---

<div
  class:list={twMerge([
    "p-2 my-8 rounded-xl border dark:border-neutral-800 border-neutral-200",
    "bg-[repeating-linear-gradient(315deg,var(--pattern-fg)_0,var(--pattern-fg)_1px,transparent_0,transparent_50%)] bg-size-[10px_10px] bg-fixed",
    "[--pattern-fg:var(--color-ln-secondary)]/80",
    props.class,
  ])}
>
  <slot />
</div>
