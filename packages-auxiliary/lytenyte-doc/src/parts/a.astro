---
import { byId } from "../all-collections";

const href = Astro.props.href as string;

if (!href.startsWith("https") && !href.startsWith("mailto:") && !byId[href.split("#").at(0)!]) {
  throw new Error(`The link ${href} is not exist.`);
}
---

<a
  {...Astro.props}
  class="font-semibold text-xd-prose-link underline underline-offset-4 transition-colors hover:text-xd-prose-link/80 [&_strong]:text-xd-prose-link"
  ><slot /></a
>
