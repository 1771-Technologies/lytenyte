---
// FORK of https://github.com/withastro/starlight/blob/main/packages/starlight/user-components/FileTree.astro

import { processFileTree } from "./rehype-file-tree";

const fileTreeHtml = await Astro.slots.render("default");
const html = processFileTree(fileTreeHtml, `${import.meta.dirname}/file-tree-icons.ts`);
---

<ln-file-tree set:html={html} class="not-content" data-pagefind-ignore />

<style>
  ln-file-tree {
    --x-space: 1.5rem;
    --y-space: 0.125rem;
    --y-pad: 0;

    margin-block: 32px;
    display: block;
    border: 1px solid var(--color-gray-200);
    border-radius: 16px;
    padding: 1rem;
    background-color: var(--color-gray-00);
    font-size: 14px;
    font-family: monospace;
    overflow-x: auto;
  }

  ln-file-tree :global(.directory > details) {
    border: 0;
    padding: 0;
    padding-inline-start: var(--x-space);
    background: transparent;
  }

  ln-file-tree :global(.directory > details > summary) {
    margin-inline-start: calc(-1 * var(--x-space));
    border: 0;
    padding: var(--y-pad) 0.625rem;
    font-weight: normal;
    color: var(--color-gray-900);
    max-width: 100%;
  }

  ln-file-tree :global(.directory > details > summary::marker),
  ln-file-tree :global(.directory > details > summary::-webkit-details-marker) {
    color: var(--color-gray-700);
  }

  ln-file-tree :global(.directory > details > summary:hover),
  ln-file-tree :global(.directory > details > summary:hover .tree-icon) {
    cursor: pointer;
    color: var(--color-primary-500);
    fill: currentColor;
  }

  ln-file-tree :global(.directory > details > summary:hover ~ ul) {
    border-color: var(--color-gray-100);
  }

  ln-file-tree :global(.directory > details > summary:hover .highlight .tree-icon) {
    color: var(--color-gray-700);
    fill: currentColor;
  }

  ln-file-tree :global(ul) {
    margin-inline-start: 0.5rem;
    border-inline-start: 1px solid var(--color-gray-200);
    padding: 0;
    padding-inline-start: 0.125rem;
    list-style: none;
  }

  ln-file-tree > :global(ul) {
    margin: 0;
    border: 0;
    padding: 0;
  }

  ln-file-tree :global(li) {
    margin: var(--y-space) 0;
    padding: var(--y-pad) 0;
  }

  ln-file-tree :global(.file) {
    margin-inline-start: calc(var(--x-space) - 0.125rem);
    color: var(--sl-color-white);
  }

  ln-file-tree :global(.tree-entry) {
    display: inline-flex;
    align-items: flex-start;
    flex-wrap: wrap;
    max-width: calc(100% - 1rem);
  }

  @media (min-width: 30em) {
    ln-file-tree :global(.tree-entry) {
      flex-wrap: nowrap;
    }
  }

  ln-file-tree :global(.tree-entry > :first-child) {
    flex-shrink: 0;
  }

  ln-file-tree :global(.empty) {
    color: var(--color-gray-700);
    padding-inline-start: 0.375rem;
  }

  ln-file-tree :global(.comment)::before {
    content: '"';
    display: inline-flex;
  }
  ln-file-tree :global(.comment)::after {
    content: '"';
    display: inline-flex;
  }
  ln-file-tree :global(.comment) {
    color: var(--color-gray-700);
    margin-inline-start: 1.625rem;
    width: fit-content;
    padding-inline: 8px;
    padding-block: 2px;
    margin-block: -2px;
    border-radius: 8px;
    background-color: var(--color-primary-50);
  }

  ln-file-tree :global(.highlight) {
    display: inline-block;
    border-radius: 0.25rem;
    padding-inline-end: 0.5rem;
    color: var(--color-gray-700);
    background-color: var(--color-primary-200);
  }

  ln-file-tree :global(svg) {
    display: inline;
    fill: var(--color-gray-700);
    vertical-align: middle;
    margin-inline: 0.25rem 0.375rem;
    width: 0.875rem;
    height: 0.875rem;
  }

  ln-file-tree :global(.highlight svg.tree-icon) {
    fill: currentColor;
  }
</style>
