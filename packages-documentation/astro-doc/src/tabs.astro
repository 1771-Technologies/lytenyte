---
import { Tabs as SLTabs } from "@astrojs/starlight/components";
const props = Astro.props;
---

<div class="ln-tabs my-8">
  <SLTabs {...props}>
    <slot />
  </SLTabs>
</div>

<style>
  .ln-tabs {
    starlight-tabs {
      border: 1px solid var(--color-gray-200);
      background-color: var(--color-gray-50);
      padding-top: 4px;
      border-radius: 16px;
      overflow: hidden;

      p:first-child {
        padding-top: 16px;
      }
      p:last-child {
        padding-bottom: 16px;
      }

      .expressive-code:not(:first-child) {
        margin-top: 16px;
      }

      .expressive-code {
        margin-inline: -16px;

        .frame {
          box-shadow: none;
          border-block: 0px solid transparent;

          pre {
            border-radius: 0px;
          }
        }
      }

      .tablist-wrapper {
        ul {
          margin: 0px;
          padding: 0px;
          padding-inline: 16px;
          display: flex;
          gap: 16px;

          li {
            padding-inline: 4px;
            padding-block: 0px;

            margin: 0px;

            a {
              padding: 8px 0px 8px 0px;
              font-size: 15px;
              font-weight: 400;

              border-bottom: 2px solid transparent;
              color: var(--color-gray-600);

              &:hover {
                color: var(--color-gray-800);
              }

              &[aria-selected="true"] {
                border-bottom: 2px solid var(--color-primary-500);
                color: var(--color-primary-700);
              }
            }
          }
        }
      }

      [role="tabpanel"] {
        margin: 0px;
        background-color: var(--color-gray-100);
        padding-inline: 16px;
        padding-block-start: 0px;
      }
    }
  }
</style>
